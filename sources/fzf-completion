#!/usr/bin/env bash

if ! command -v fzf > /dev/null 2>&1; then
  return
fi

if command -v node > /dev/null 2>&1 && command -v jq > /dev/null 2>&1; then
  alias npmr="jq --raw-output '.scripts | paths | add' package.json | fzf --reverse | xargs npm run"
fi

if command -v git > /dev/null 2>&1; then
  alias gitco="git branch | fzf --reverse | xargs git checkout"

  function gitlg() {
    git log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' | fzf --ansi --reverse --tiebreak=index --no-sort --bind=ctrl-s:toggle-sort --preview 'f() { set -- $(echo -- "$@" | grep -o "[a-f0-9]\{7\}"); [ $# -eq 0 ] || git show --color=always $1; }; f {}'
  }
fi

if command -v pass > /dev/null 2>&1; then
  _fzf_complete_pass() {
    local PASS_DIR=${PASSWORD_STORE_DIR-~/.password-store}

    _fzf_complete '--reverse' "$@" < <(
      find "${PASS_DIR}" -name "*.gpg" -print | sed -e "s|${PASS_DIR}/\(.*\)\.gpg$|\1|"
    )
  }

  [ -n "$BASH" ] && complete -F _fzf_complete_pass -o default -o bashdefault pass
fi
