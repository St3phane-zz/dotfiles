#!/bin/sh

if [[ `which node | wc -l` -eq 0 ]]; then
  alias npm='docker run -it --read-only --rm -v /usr/local/node:/usr/node/bin -v $(pwd):/usr/src -w /usr/src vibioh/node:dev npm'
  alias node='docker run -it --read-only --rm -v /usr/local/node:/usr/node/bin -v $(pwd):/usr/src -w /src/src vibioh/node:latest node'
  export PATH=/usr/local/node:$PATH
fi

if [[ `which mvn | wc -l` -eq 0 ]]; then
  alias mvn='docker run -it --read-only --rm -v /usr/local/node:/usr/node/bin -v $(pwd):/usr/src -w /usr/src vibioh/maven:latest mvn'
fi