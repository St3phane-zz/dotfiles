#!/bin/sh

if [ `which node 2>/dev/null | wc -l` -eq 0 ]; then
  alias npm='docker run -it --rm -v ${HOME}/.npm_packages:/home/node/.npm_packages -v `realpath ./`:/home/node/src -w /home/node/src vibioh/node:dev npm'
  alias node='docker run -it --rm -v /${HOME}/.npm_packages:/home/node/.npm_packages -v `realpath ./`:/home/node/src -w /home/node/src vibioh/node node'
fi

if [ `which mvn 2>/dev/null | wc -l` -eq 0 ]; then
  alias mvn='docker run -it --rm -v ${HOME}/.m2:/home/java/.m2 -v `realpath ./`:/home/node/src -w /home/node/src vibioh/maven mvn'
fi

if [ `which travis 2>/dev/null | wc -l` -eq 0 ]; then
  alias travis='docker run -it --rm -v `realpath ./`:/usr/src vibioh/travis-cli'
fi

if [ `which go 2>/dev/null | wc -l` -eq 0 ]; then
  alias go='docker run -it --rm -e CGO_ENABLED=0 -e GOGC=off -v `realpath ./`:/usr/src -w /usr/src golang:1.6 go'
fi
