#!/bin/sh

if [[ `which node | wc -l` -eq 0 ]]; then
  alias npm='docker run -it -P --rm -v /usr/local/node:/usr/node/bin -v $(pwd):/usr/src -w /usr/src vibioh/node:dev npm' 
  alias node='docker run -it -P --rm -v /usr/local/node:/usr/node/bin -v $(pwd):/usr/src -w /src/src vibioh/node:latest node'
  export PATH=/usr/local/node:$PATH
fi
